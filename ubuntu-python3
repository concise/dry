#!/bin/bash
#
# sudo su -
# wget https://github.com/concise/dry/raw/master/ubuntu-python3
# bash ubuntu-python3
#
# python3 -m pip install --upgrade pip setuptools
#

set -e

TMPDIR=$(mktemp -d)
cd "$TMPDIR"

apt-get install -y make libreadline-dev libssl-dev
wget https://www.python.org/ftp/python/3.5.2/Python-3.5.2.tar.xz
openssl md5 Python-3.5.2.tar.xz | grep 8906efbacfcdc7c3c9198aeefafd159e
tar xf Python-3.5.2.tar.xz
cd Python-3.5.2
./configure
make -j 8
make install
